WOOF			:=	@echo $(DOGE)
SAY				:= $(shell command -v say 2> /dev/null)
ifdef SAY
 OS				:= $(shell uname)
 ifeq ($(OS), Darwin)
  WOOF			+= && say 'Woof! Woof!'
 endif
endif

$(NAME): $(OBJ)
	@$(CC) -o $(NAME) -lncurses $(OBJ)
	$(WOOF)

%.o: %.cpp
	@$(CC) -c $<

clean:
	@rm -rf $(OBJ)

fclean: clean
	@rm -rf $(NAME)

re: fclean all