WOOF			:=	@echo $(DOG)
SAY				:= $(shell command -v say 2> /dev/null)
ifdef SAY
	OS				:= $(shell uname)
	ifeq ($(OS), Darwin)
 		WOOF			+= && say 'Woof! Woof!'
	endif
endif

all: $(NAME)

$(NAME): $(OBJS)
	@$(G) $(OBJS) $(LNFLAGS) -o $@
	$(WOOF)

%.o: %.cpp
	@$(G) $(FLAGS) -o $@ -c $<

clean:
	@rm -f $(OBJS)

fclean: clean
	@rm -f $(NAME)

re:     fclean all

.PHONY: all clean fclean re